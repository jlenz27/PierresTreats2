@{
  Layout = "_Layout";
}

@using PierresTreats.Models;

<h1>@User.Identity.Name</h1>

@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Flavor item in Model)
    {
      <li>@Html.ActionLink($"{item.FlavorName}", "Details", new { id = item.FlavorId }) </li>
    }
  </ul>
}
<a href='@Url.Action("Create")'>
    <button type="button" class="button">New Flavor</button>
</a>
<a href='@Url.Action("Index")'>
    <button type="button" class="button">Back</button>
</a>