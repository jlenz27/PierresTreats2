@{
  Layout = "_Layout";
}

@using PierresTreats.Models;

<h1>@User.Identity.Name</h1>

@if (@Model.Count == 0)
{
  <h3>No Treats have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Treat item in Model)
    {
      <li>@Html.ActionLink($"{item.TreatName}", "Details", new { id = item.TreatId }) </li>
    }
  </ul>
}
<a href='@Url.Action("Create")'>
    <button type="button" class="button">New Treat</button>
</a>
<a href='@Url.Action("Index")'>
    <button type="button" class="button">Back</button>
</a>